    "@babel/plugin-proposal-private-methods": "^7.10.1",
    "@snowpack/plugin-babel": "^1.0.0",
    "@snowpack/plugin-parcel": "^1.0.0",
    "babel-eslint": "^10.1.0",
    "eslint-config-rollup": "^0.1.0",
    "parcel-plugin-metaimage": "^1.2.3",
    "postcss": "8.4.31",
